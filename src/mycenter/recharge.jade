extends ../shade/layout
block content
  link(rel="stylesheet", href="/skin/css/mycenter/index.css")
  link(rel="stylesheet", href="/skin/css/mycenter/withdraw.css")

  #model.allH
    .my-warp
      .container.clearfix
        //- 左侧
        include side.jade
        //- 右侧
        .my-main#rechargeM(v-cloak)
          //- 充值
          section.item-wrapper.recharge
            .item-header 
              span 充值
            .item-warp
              .recharge-list
                ul
                  li.price
                    span.t-name 账户余额：
                    span.t-val 2000元
                  li(v-if="headerModel.isMobileOrTable")
                    span.t-name 姓名 
                    span.t-val 
                  li(v-if="headerModel.isMobileOrTable")
                    span.t-name 身份证号   
                    span.t-val 
                  li.t-line
                    span.t-name 充值金额：
                    span.t-val 
                      input.recharge-input(type="text")
                      |元
                  li(v-if="!headerModel.isMobileOrTable")
                    span.t-name 充值方式：
                    span.t-val.pay-type
                      label
                        input(type="radio" name='payTaye' checked="checked")

                      label
                        input(type="radio" name='payTaye') 

                  li(v-if="headerModel.isMobileOrTable").t-line
                    a(href="#").seebankP 查看银行限额 >>
                  

                .recharge-btns
                  a.btn(href="#" v-if="!headerModel.isMobileOrTable") 确定
                  a.btn(href="#" v-else) 确认并提现

    script(src="/skin/js/mycenter/recharge.js")